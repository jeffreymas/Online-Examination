@using Microsoft.AspNetCore.Http;
@{
    var name = Context.Session.GetString("uname");
    var role = Context.Session.GetString("role");

}
@{
    ViewData["Title"] = "Events";
    Layout = "~/Views/Layout/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- START PAGE CONTENT-->
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header no-bd">
                    <h5 class="modal-title"><span class="fw-mediumbold">Event</span></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <form>
                        <div class="row">
                            <input type="text" id="Id" name="Id" class="form-control" hidden>
                            <div class="col-sm-12">
                                <div class="form-group form-group-default">
                                    <label>Event</label>
                                    <input type="text" id="Name" name="Name" class="form-control" placeholder="Event Name">
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group form-group-default">
                                    <label>Start Date</label>
                                    <input type="date" id="StartDate" name="StartDate" class="form-control" placeholder="Start Date" min="2010-01-01" max="2050-12-31">
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group form-group-default">
                                    <label>End Date</label>
                                    <input type="date" id="EndDate" name="EndDate" class="form-control" placeholder="End Date" min="2010-01-01" max="2050-12-31">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer no-bd">
                    <button type="button" id="add" class="btn btn-outline-success" data-dismiss="modal" onclick="Save();">Insert</button>
                    <button type="button" id="update" class="btn btn-outline-warning" data-dismiss="modal" onclick="Update();">Update</button>
                    <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>


    <div class="page-heading">
        <h1 class="page-title">Event List</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/"><i class="la la-home font-20"></i></a>
            </li>
        </ol>
        @if (role == "Admin")
        {
            <div data-toggle="modal" data-target="#myModal" onclick="ClearScreen();">
                <button class="btn btn-outline-success btn-circle" data-toggle="tooltip" data-placement="right" data-animation="false" title="Add">
                    <i class="fa fa-plus"></i>
                </button>
            </div>
        }

    </div>
    <div class="page-content fade-in-up">
        <div class="ibox">
            @*<div class="ibox-head">
                <div class="ibox-title">Data Table</div>
                </div>*@
            <div class="ibox-body">
                @if (role == "Admin")
                {
                    <table class="table table-striped table-bordered table-hover" id="TblEvent" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Event</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                }
                else
                {
                    <table class="table table-striped table-bordered table-hover" id="TblEventT" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Event</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                }

            </div>
        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>

@section Scripts{
    @*<script src="~/js/Script/EventTrainer.js"></script>*@ 
    <script src="~/js/Script/EventScript.js"></script>
}